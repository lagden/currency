{
  "name": "@tadashi/currency",
  "version": "1.2.0",
  "description": "The simple and tiny script for currency input mask",
  "keywords": [
    "currency",
    "mask",
    "input",
    "tiny"
  ],
  "bug": {
    "url": "https://github.com/lagden/currency",
    "email": "lagden@gmail.com"
  },
  "license": "MIT",
  "author": {
    "name": "Thiago Lagden",
    "email": "lagden@gmail.com"
  },
  "main": "dist/index.umd.js",
  "repository": "lagden/currency",
  "scripts": {
    "pretest": "xo",
    "test": "jest test",
    "coverage": "jest test --coverage",
    "rollup": "rollup -c",
    "prebuild": "npm test && rm -rf dist",
    "build": "npm run rollup",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "src",
    "license",
    "README.md"
  ],
  "xo": {
    "envs": [
      "es6"
    ],
    "globals": [
      "beforeEach",
      "test",
      "expect",
      "document",
      "window",
      "HTMLElement",
      "HTMLInputElement"
    ],
    "esnext": true,
    "semicolon": false,
    "rules": {
      "capitalized-comments": 0,
      "unicorn/prevent-abbreviations": 0,
      "no-constructor-return": 0,
      "unicorn/no-zero-fractions": 0
    }
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "devDependencies": {
    "@babel/preset-env": "7.12.11",
    "jest": "26.6.3",
    "rollup": "2.36.1",
    "simulant": "0.2.2",
    "xo": "0.37.1"
  }
}